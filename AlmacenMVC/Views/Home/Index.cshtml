<div class="row">
    <div class="col-md-10">
           
        <div class="container" align="center">
            <div  class ="card card-container" >
                <h2>Iniciar Sessión</h2>
                @Html.ValidationSummary(true, "", new { @class ="text-danger" })
                @using (Html.BeginForm("Usuarios", "Home", FormMethod.Post, new { @class = "form-signin" }))
                {
                    <div>
                        @Html.TextBoxFor(dl => dl.Email, new { @class = "form-control", @placeholder ="Correo Electronico" })
                        @Html.ValidationMessageFor(dl => dl.Email, "", new { @class = "text-danger" })
                    </div>

                    <div>
                        @Html.PasswordFor(dl => dl.Password, new { @class = "form-control", @placeholder = "Contraseña" })
                        @Html.ValidationMessageFor(dl => dl.Password, "", new { @class = "text-danger" })
                    </div>
                    <br />
                    <input type="submit"  value="Entrar" class="btn btn-info"/>
                }

                @{
                    if (!string.IsNullOrEmpty(ViewBag.Message))
                    {
                        <script type="text/javascript">
                            alert("Email o Password Incorrectos");
                            document.location = "Index";
                        </script>
                    }
                }

            </div>
        </div>


    </div>
    
</div>